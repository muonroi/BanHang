@model eShopSolution.ViewModels.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = null;
    var culture = CultureInfo.CurrentCulture.Name;
}
<!DOCTYPE html>
<html>

<head>
    <title>Trang đăng ký</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css2/style3.css">
</head>
<body>
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Chào mừng</h3>
                <p>Bạn đến với cửa hàng của chúng tôi cách để bạn tiết kiệm tiền tốt nhất!</p>
                <form action="/@culture/Account/Login">
                    <input type="submit" name="" value="Login" /><br />
                </form>
            </div>
            <div class="col-md-9 register-right">
                <div asp-validation-summary="All" class="text-error">
                </div>
                <form asp-action="Register" asp-controller="Account" method="post">

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3 class="register-heading">Đăng ký thành viên</h3>
                            <div class="row register-form">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name *" />
                                        <span style="display:block;color:red;" asp-validation-for="FirstName" class="text-error"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name *" />
                                        <span style="display:block;color:red;" asp-validation-for="LastName" class="text-error"></span>
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="UserName" type="text" class="form-control" placeholder="UserName *" value="" />
                                        <span style="display:block;color:red;" asp-validation-for="UserName" class="text-error"></span>
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password *" value="" />
                                        <span style="display:block;color:red;" asp-validation-for="Password" class="text-error"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password *" value="" />
                                        <span style="display:block;color:red;" asp-validation-for="ConfirmPassword" class="text-error"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="Email" type="text" class="form-control" placeholder="Your Email *" />
                                        <span style="display:block;color:red;" asp-validation-for="Email" class="text-error"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="PhoneNumber" type="text" minlength="10" maxlength="10" class="form-control" placeholder="Your Phone *" />
                                        <span style="display:block;color:red;" asp-validation-for="PhoneNumber" class="text-error"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Dob" type="date" class="form-control">
                                        <span style="display:block;color:red;" asp-validation-for="Dob" class="text-error"></span>
                                    </div>
                                    <input type="submit" class="btnRegister" value="Đăng Ký" />
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <h3 class="register-heading">Apply as a Hirer</h3>
                            <div class="row register-form">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name *" />
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name *" />
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Your Email *" />
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="PhoneNumber" type="text" maxlength="10" minlength="10" class="form-control" placeholder="Your Phone *" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="UserName" type="text" class="form-control" placeholder="UserName *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password *" />
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password *" value="" />
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="Dob" type="date" class="form-control">
                                    </div>

                                    <input type="submit" class="btnRegister" value="Đăng Ký" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>
</html>